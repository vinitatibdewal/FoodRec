<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vinita.foodrec.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_name"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/main_password"
        android:layout_below="@+id/main_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/main_name"
        android:hint="Password"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/main_name" />

    <Button
        android:onClick="main_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/main_login"
        android:layout_below="@+id/main_password"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/main_password"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/main_password" />

    <Button
        android:onClick="main_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/main_register"
        android:layout_below="@+id/main_login"
        android:layout_alignEnd="@+id/main_login"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/main_login"
        android:layout_alignParentLeft="true" />

</RelativeLayout>

